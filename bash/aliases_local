# Liferay Github

export LIFERAY_GIT="/Volumes/files/liferay/github";
export LIFERAY_BUNDLES="/Volumes/files/liferay/bundles";

alias aetrunk='cd $LIFERAY_GIT/alloy-ui-ee-1.0.x'
alias atrunk='cd $LIFERAY_GIT/alloy-ui'
alias letrunk='cd $LIFERAY_GIT/liferay-portal-ee-6.0.x'
alias lgit='cd $LIFERAY_GIT'
alias ltrunk='cd $LIFERAY_GIT/liferay-portal'

alias ltomcat='cd $LIFERAY_BUNDLES/liferay-portal-trunk/tomcat-6.0.26'

# app server starters

alias tstart='./bin/catalina.sh run && tail -f logs/catalina.out'
alias dtstart='./bin/catalina.sh jpda run && tail -f logs/catalina.out'
alias jbstart='./bin/run.sh -b 0.0.0.0 && tail -f server/default/log/server.log'

# Liferay Utils

alias oaetrunk='aetrunk; subl -n .;'
alias oatrunk='atrunk; subl -n .;'
alias oletrunk='letrunk; subl -n .;'
alias oltrunk='ltrunk; subl -n .;'

alias lpi='cd portal-impl'
alias lps='cd portal-service'
alias lpw='cd portal-web'

# Other
alias sublcd='subl -n .'
alias apachestart='sudo /usr/sbin/apachectl start'
alias apachestop='sudo /usr/sbin/apachectl stop'
alias mysql=/usr/local/mysql/bin/mysql
alias mysqladmin=/usr/local/mysql/bin/mysqladmin